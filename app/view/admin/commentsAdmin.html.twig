{% extends "_layout.html.twig" %}

{% block head %}
    <title>Liste des commentaires</title>
{% endblock %}


{% block content %}
    <h2>Commentaires de l'article {{ article.title }}</h2>
    {% block comment %}
        <table class="table">
            <thead>
            <th class="card-title">Auteur</th>
            <th class="card-title">Titre</th>
            <th class="card-title">Contenu</th>
            <th class="card-title">Date</th>
            <th class="card-title">Statut</th>
            <th class="card-title">Valider / Invalider</th>
            </thead>
            <tbody>
            {% for comment in comments %}

                <tr>
                    <td>
                        <p>{{ comment.author.pseudo }}</p>
                    </td>
                    <td>
                        <p>{{ comment.title }}</p>
                    </td>
                    <td>
                        <p>{{ comment.content }}</p>
                    </td>
                    <td>
                        <p>{{ comment.getFullFormattedDate }}</p>
                    </td>
                    <td>
                        {% if comment.is_active == true %}
                            <p class="btn btn-success"><i class="fa fa-check"></i></p>
                        {% else %}
                            <p class="btn btn-danger    "> <i class="fa fa-times"></i></p>
                        {% endif %}

                    </td>
                    <td>
                        {% if comment.is_active == true %}
                            <p class="btn btn-success"><i class="fa fa-check"></i></p>

                        {% else %}
                            <p class="btn btn-danger    "> <i class="fa fa-times"></i></p>
                            <p class="btn btn-success"><i class="fa fa-check"></i></p>
                        {% endif %}

                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    {% endblock  comment %}

{% endblock %}
