{% extends "layout.html.twig" %}

{% block head %}
    <title>Blog</title>
{% endblock %}

{% block content %}
    <h1>Les derniers articles</h1>
    <div class="row">
        {% for article in articles %}
            <div class="col-xs-4">
                <div class="card">
                    <div class="card-block">
                        <h4 class="card-title">{{ article.title }} </h4>
                        <p class="card-text">{{  article.content | nl2br }}</p>
                        <a href=""> Voir l'article</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

