{% extends "_layout.html.twig" %}

{% block head %}
    <title>Tableau de bord</title>
{% endblock %}


{% block content %}
    <div class="newArticleBtn">
        <a href="{{ router.getUrlFromRouteName('createArticle') }}" class="btn btn-success"> Créer un article</a>
    </div>

    <h2>Administration des articles :</h2>
    {% block article %}
        <table class="table">
            <thead>
            <th class="card-title">Titre</th>
            <th class="card-title">Actions</th>
            </thead>
            <tbody>
            {% for article in articles %}

                <tr>
                    <td>
                        <a href="/articles/{{ article.id }}">{{ article.title }}</a>
                    </td>
                    <td>
                        <a href="/articles/{{ article.id }}/edit" title="Éditer" class="btn btn-primary"><i class="fa fa-fw fa-edit"></i></a>
                        <a href="/articles/{{ article.id }}/delete" title="Supprimer" class="btn btn-danger"><i class="fa fa-fw fa-trash"></i></a>
                        <a href="/comments/{{ article.id }}" class="btn btn-default">Commentaires</a>

                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    {% endblock  article %}

{% endblock %}
