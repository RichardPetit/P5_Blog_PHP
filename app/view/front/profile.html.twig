{% extends "_layout.html.twig" %}

{% block head %}
    <title>Profil</title>
{% endblock %}

{% block content %}
<div align="center">
    <h1>Profil utilisateur</h1>
    <hr class="star-primary">
    {% block profil %}

    <h4>Profil de {{ user.pseudo }}</h4>
    <br>
    <p>Adresse email : {{ user.email }}</p>
    <p>Photo de profil : <img class="profilPic" src="{{ user.avatar }}" alt="photo de profil"></p>
        <br> <br> <br>
    {% endblock profil %}
</div>
{% endblock %}