{% extends "_layout.html.twig" %}

{% block head %}
    <title>Accueil</title>
{% endblock %}

{% block content %}
    {% block cv %}
        <h2>Mieux me connaitre</h2>
        <p>Cliquer sur le bouton pour voir mon Curriculum Vitae</p>
<div class="svg">
    <a class="button" href="../../../public/images/Curriculum%20Vitae%20Richard%20PETIT%20.pdf" target="_blank">
        <svg>
            <rect height="40" width="130" fill="transparent" />
        </svg>
        <span>Mon CV</span>
    </a>
</div>

    {% endblock cv %}
    {% block article %}
        <h2>Les derniers articles :</h2>
        <br>
        {% for article in viewArticle %}
            <h4 class="card-title">{{ article.title }} - de {{ article.author.pseudo }}</h4>
            <p>{{ article.summary }}</p>
            <p>Publi√© le : {{ article.getFullFormattedDate() }}</p>
            <a href="/articles/{{ article.id }}"> Lire l'article</a>
        {% endfor %}
    {% endblock  article %}

{% endblock %}
