{% extends "_layout.html.twig" %}

{% block head %}
    <title>Tableau de bord</title>
{% endblock %}


{% block content %}
    <h2>Administration des articles :</h2>
    {% block article %}
        <table class="table">
            <thead>
            <th class="card-title">Titre</th>
            <th class="card-title">Actions</th>
            </thead>
            <tbody>
            {% for article in articles %}

                <tr>
                    <td>
                        <a href="/articles/{{ article.id }}/edit">{{ article.title }}</a>
                    </td>
                    <td>
                        <a href="/articles/{{ article.id }}/edit" class="btn btn-primary">Modifier</a>
                        <a href="/articles/{{ article.id }}/delete" class="btn btn-primary">Supprimer</a>

                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    {% endblock  article %}

    <hr/>

    <a href="../../../index.php" class="btn btn-success"> Administer les membres</a>

{% endblock %}
