{% extends "_layout.html.twig" %}

{% block head %}
    <title>Tableau de bord</title>
{% endblock %}


{% block content %}
    <h2>Administration des articles :</h2>
    {% block article %}
        <table class="table">
            <thead>
            <th class="card-title">Titre</th>
            <th class="card-title">Actions</th>
            </thead>
            <tbody>
            {% for article in articles %}

                <tr>
                    <td>
                        <a href="/articles/show{{ article.id }}">{{ article.title }}</a>
                    </td>
                    <td>
                        <a href="/articles/show{{ article.id }}" class="btn btn-primary">Modifier</a>
                        <form method="post" action="/admin">
                            <input type="hidden" name="delete">
                        <button name="delete" class="btn btn-danger">Supprimer</button>
                        </form>

                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    {% endblock  article %}

    <hr/>

    <a href="/admin_users" class="btn btn-success"> Administer les membres</a>

{% endblock %}